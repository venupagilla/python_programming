    "letter=input(\"Enter the sentence you want to capitalize : \")\n",
    "new_letter=\"\"\n",
    "for i in range(len(letter)):\n",
    "    if letter[i-1] == \" \" or i==0:\n",
    "        new_letter+=letter[i].upper()\n",
    "    else:\n",
    "        new_letter+=letter[i]\n",
    "print(new_letter)"
